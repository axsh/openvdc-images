{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Multi-Hypervisor Machine Image Description.",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "hypervisor": {
            "type": "string"
          },
          "download_url": {
            "type": "string",
            "format": "uri"
          },
          "checksum_type": {
            "type": "string"
          },
          "checksum": {
            "type": "string"
          }
        },
        "required": [
          "hypervisor",
          "download_url"
        ]
      }
    }
  },
  "required": [
    "title",
    "images"
  ]
}